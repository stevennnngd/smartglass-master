<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.steven.Smartglass.newCamera
                android:id="@+id/newCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.19"
                android:visibility="invisible"></com.steven.Smartglass.newCamera>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="语音"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/comm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="说出口令‘芝麻开门’开启"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/comm"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <Button
                android:id="@+id/takepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:visibility="invisible"
                android:layout_marginEnd="22dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/voice" />

            <Button
                android:text="增加属性"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:id="@+id/facepic"
                android:layout_below="@+id/pic"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/turing"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="20dp"
                android:layout_above="@+id/turing"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
